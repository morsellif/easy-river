{
  "extends": [
    "config:base",
    ":disablePeerDependencies",
    ":disableDependencyDashboard",
    "schedule:earlyMondays",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeStrategy": "squash",
      "labels": ["minor/patch"]
    }
  ],
  "timezone": "Europe/Rome"
}
